  <button type="button" class="button-59 button-comment btn-warning"
          style="height: 2em; background-color: #0093E9;
          background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
          text-decoration: none;margin: auto 0 auto 0; border-radius: 8px; width: 15em; margin-left: 0.5rem; margin-bottom: 0.25rem"
          data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-chat-left-dots-fill"
            style="margin-right: 0.2em;"></i>Dodaj novi komentar</button>

          
                <% if(komentari.length >0) { %>
                    <% for(var kom of komentari) { %>
                <div style="text-align: center; margin-top: 2rem;">
                    <div class="comment-box" style="margin-left: auto; margin-right: auto; width: 60%;">
                      <div style="display: flex; justify-content: space-between">
                        <div class="comment-username"><%= kom.cdate.toLocaleDateString() %> | <%= kom.ctime %></div>
                      </div>
                      <div style="display: flex; justify-content: space-between">
                        <div class="comment-text">
                          <i class="bi bi-chat-right-dots-fill" style="margin-right: 0.25em;"></i><%= kom.comment_text %>
                        </div>
                    </div>
                    <div class="comment-buttons" style="margin-left: auto; width: 10%;">             
                      <a class="button-59 button-comment btn-danger" href="/delete"
                        style="height: 2em; text-decoration: none;margin: auto 0 auto 0; border-radius: 8px; width: fit-content; margin-left: 0.5rem; margin-bottom: 0.25rem;"><i
                          class="bi bi-trash" style="margin-right: 0.1em;"></i>Obri≈°i</a>
                    </div>
                </div>
            </div>
                <% } %>
                <% } %>
            
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="margin-top:5rem; ">
    <div class="modal-dialog" style="background-color: #0093E9; background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);">
      <div class="modal-content" style="background-color: #0093E9; background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel" style="font-weight: 900;">Dodaj komentar</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/" method="POST">
            <textarea id="komtekst" name="komtekst" style="width: 100%;" rows="5"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Odustani</button>
          <button type="submit" class="btn btn-primary">Komentiraj</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
